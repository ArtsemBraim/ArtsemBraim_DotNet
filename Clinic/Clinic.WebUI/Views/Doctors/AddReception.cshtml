@model Clinic.WebUI.Models.ReceptionViewModel

@{
    ViewData["Title"] = "AddReception";
}

<h1>AddReception</h1>

<h4>ReceptionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReception">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="DoctorId" type="hidden" />
            <select asp-for="PatientId" class="form-control" asp-items="@ViewBag.Items"></select>
            <div class="form-group">
                <label asp-for="ReceptionTime" class="control-label"></label>
                <input asp-for="ReceptionTime" class="form-control" />
                <span asp-validation-for="ReceptionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

